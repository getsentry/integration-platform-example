{
  "elements": [
    {
      "type": "issue-link",
      "link": {
        "uri": "/api/sentry/issue-link/link/",
        "required_fields": [
          {
            "type": "select",
            "label": "Which item would you like to link to this Sentry Issue?",
            "name": "itemId",
            "uri": "/api/sentry/options/items/"
          }
        ]
      },
      "create": {
        "uri": "/api/sentry/issue-link/create/",
        "required_fields": [
          {
            "type": "text",
            "label": "Item Title",
            "name": "title",
            "default": "issue.title"
          },
          {
            "type": "textarea",
            "label": "Item Description",
            "name": "description",
            "default": "issue.description"
          }
        ]
      }
    }
  ]
}
